    <TabControl>
        <TabItem Header="Resources" >
            <TabControl>
                <TabItem Header="Materials" >
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="21*"/>
                            <ColumnDefinition Width="176*"/>
                        </Grid.ColumnDefinitions>
                        <DataGrid ItemsSource="{Binding Materials, UpdateSourceTrigger=PropertyChanged}" x:Name="Materials" CanUserAddRows="True" AutoGenerateColumns="False" Grid.ColumnSpan="2">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="125" />
                                <DataGridTextColumn Binding="{Binding Description}" Header="Description" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <TabItem Header="Meals" >
                    <Grid Background="#FFE5E5E5">
                        <DataGrid ItemsSource="{Binding Meals,UpdateSourceTrigger=PropertyChanged}"   x:Name="Meals" CanUserAddRows="True" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="125"/>
                                <DataGridTextColumn Binding="{Binding Description}" Header="Description" Width="*"/>
                                <DataGridTextColumn Binding="{Binding EffectsMethods}" Header="Effects" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <TabItem Header="Potions" > 
                    <Grid Background="#FFE5E5E5">
                        <DataGrid ItemsSource="{Binding Potions,UpdateSourceTrigger=PropertyChanged}"  x:Name="Potions" CanUserAddRows="True" AutoGenerateColumns="False">
