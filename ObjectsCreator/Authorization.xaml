<Window x:Class="ObjectsCreator.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:ObjectsCreator"
        mc:Ignorable="d"
        Title="Authorization" Height="168" Width="234">

    
    <StackPanel>

        <PasswordBox x:Name="Password" Style="{StaticResource MahApps.Styles.PasswordBox}" mah:TextBoxHelper.UseFloatingWatermark="True" mah:TextBoxHelper.Watermark="Пароль"/>
        <TextBox x:Name="Login" Style="{StaticResource MahApps.Styles.TextBox}" mah:TextBoxHelper.UseFloatingWatermark="True" mah:TextBoxHelper.Watermark="логин"/>
        <Button Visibility="Hidden" x:Name="Register" Content="Register" Click="Register_Click"/>
        <Button x:Name="LoginButton" Content="Login" Click="Login_Click"/>

    </StackPanel>
</Window>
